												</div>
											</div>
											<div class="separator clear-left">
												<p class="btn-add">
													<a href="#" class="hidden-sm">
														Kota Sukabumi
													</a>
												</p>
												<p class="btn-details">
													<i class="fa fa-list"></i> Bekas</a>
												</p>
											</div>
											<div class="clearfix">
											</div>
										</div>
									</div>
								</div>
							<% end %>
						</div>
					</div>
					<div class="item">
