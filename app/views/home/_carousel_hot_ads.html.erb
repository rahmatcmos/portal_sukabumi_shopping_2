				<div class="carousel-inner">
					<div class="item active">
						<div class="row">
							<% (1..4).each do %>
								<div class="col-sm-3">
									<div class="col-item">
										<div class="photo">
											<%= image_tag 'single1.jpg', alt: 'Gambar', class: 'img-responsive' %>
